<div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
        <h1>Tasks#edit</h1>
        <p>Find me in app/views/tasks/edit.html.erb</p>
        <%= form_for(@task) do |t| %>
        <%= t.label :name %>
        <%= t.text_field :name, class: 'form-control' %>
        <%= t.label :done %>
        <%= t.check_box :done %>
        <br>
        <%= t.submit class: 'btn btn-primary'  %>
        <% end %>
    </div>
</div>
